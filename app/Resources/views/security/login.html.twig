{% extends "base.html.twig" %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData) }}</div>
{% endif %}

<form class=login action="{{ path('login_check') }}" method="post">
    <label class=login for="username">Username:</label>
    <input class=login type="text" id="username" name="_username" value="{{ last_username }}" />

    <label class=login for="password">Password:</label>
    <input class=login type="password" id="password" name="_password" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button class=login type="submit">login</button>
</form>
{% endblock %}
